{{log this}}
<div class="p-3 rounded tweet d-flex flex-column">
  <div class="d-inline-flex align-items-center justify-content-between gap-2">
    <h5>@ {{this.author}}</h5>
    <span><small>{{formatDate this.date}}</small></span>
  </div>
  <small class="mb-3">{{this._id}}</small>
  <div>
    <p>{{this.body}}</p>
  </div>
  <div class="w-100 text-end">
    <button
      class="rounded d-inline-flex flex-row align-items-center gap-1 px-2 py-1 like-button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class=""
      ><path
          d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
        /></svg>
      <span id="{{this.id}}-likes-count">
        {{this.likes}}
      </span>
    </button>
  </div>
</div>