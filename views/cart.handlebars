<div class="d-flex justify-content-between align-items-baseline">
  <h3 class="mb-3">Tu carrito </h3>
  <a class="btn btn-ghost" href="/shop">Go back to shop</a>
</div>

{{#with cart}}
  {{#each products}}
  <div class="p-3 d-flex flex-row gap-3 align-items-baseline">
    <span class="text-white">
    {{this.id.name}} ({{this.quantity}} Unidades)
    </span>
    <div>
      <div class="d-flex flex-row gap-3">
        <button class="btn btn-outline-danger btn-sm" onclick="deleteProductFromCart('{{this.id._id}}')">Delete from cart</button>
      </div>
    </div>
  </div>
  {{/each}}
{{/with}}
<script src="/scripts/cart.js"></script>